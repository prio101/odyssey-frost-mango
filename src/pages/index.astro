---
import { Icon } from 'astro-icon/components';
import {
	AnnouncementBar,
	Button,
	CustomerQuoteSection,
	ThreeColumnTextSection,
	YouTubeEmbedSection,
	StickyTextImageSection,
	CtaCardSection,
} from '@components/odyssey-theme';
import Layout from "../layouts/Page.astro";
import TextAndImageHero from '../components/sections/heros/TextAndImageHero.astro';

const seo = {
	title: 'Frost Mango Lab',
	description: 'Frost Mango Lab; We work and tailor top-notch digital solutions.',
};
---

<AnnouncementBar
	text="Read Our Latest Blog Post"
	href="/blog/posts/remote-work-mental-health/"
	slot="announcement-bar"
/>
<Layout {seo}>
	<TextAndImageHero reversed>
		<div slot="text-container">
			<h1>Be Adventures, join us and explore in fun way</h1>
			<p>We explore and innovate with edge techonological ideas</p>
		</div>
		<div slot="btns-container">
		</div>
		<picture slot="image-container">
			<img
				src="/assets/images/landing-1/landing-hero-1.jpg"
				alt="Astro Odyssee"
				id="home-hero-image"
			/>
		</picture>
	</TextAndImageHero>

	<CustomerQuoteSection
		quoteText="Frost Mango Lab exceeded our expectations with their innovative solutions and exceptional service. Highly recommend!"
		customerName="Happy Customer"
	/>

	<ThreeColumnTextSection>
		<div slot="column-1-body">
			<h2>Why?</h2>
			<p>
				At Frost Mango Lab, we believe in pushing the boundaries of technology to deliver innovative solutions that drive success for our clients.
			</p>
		</div>

		<div slot="column-2-body">
			<h2>How?</h2>
			<p>
				Our team employs cutting-edge methodologies and tools to ensure that every project is executed with precision and excellence. We focus on understanding your unique needs and delivering solutions that are both innovative and effective.
			</p>
		</div>

		<div slot="column-3-body">
			<h2>What?</h2>
			<p>
				We specialize in creating custom digital solutions that are tailored to meet the specific needs of our clients. From web development to mobile applications, we have the expertise to bring your vision to life.
			</p>
		</div>
	</ThreeColumnTextSection>

	<YouTubeEmbedSection url="https://www.youtube.com/watch?v=U_OexTUIyik" rounded
	/>

	<StickyTextImageSection>
		<div slot="text-container">
			<h2>Features</h2>
			<h3>AI</h3>
			<p>
				Our solutions leverage Artificial Intelligence to provide smart, efficient, and automated processes that enhance user experience and operational efficiency.
			</p>
			<h3>ML</h3>
			<p>
				We utilize Machine Learning algorithms to analyze data, predict trends, and deliver personalized experiences that drive engagement and growth.
			</p>
			<h3>VR</h3>
			<p>
				Our Virtual Reality applications create immersive experiences that captivate users and provide innovative ways to interact with digital content.
			</p>
			<h3>AR</h3>
			<p>
				Augmented Reality solutions blend the digital and physical worlds, offering interactive and engaging experiences that enhance real-world environments.
			</p>
		</div>
		<picture slot="image-container">
			<img
				src="/assets/images/landing-1/landing-sticky.jpg"
				alt="Astro Odyssey"
				loading="lazy"
			/>
		</picture>
	</StickyTextImageSection>

	<CtaCardSection
		background="var(--theme-surface-2)"
		color="var(--theme-on-surface-2)"
	>
		<h2>Start with us Today</h2>
		<p>
			It only takes a couple conversations to have an Adventures solution.
		</p>
	</CtaCardSection>
</Layout>
